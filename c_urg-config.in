#!/bin/sh

prefix=@prefix@

usage="Usage: c_urg-config [--version] [--cflags] [--libs]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do

  case $1 in
    --version)
      echo "@VERSION@"
      ;;
    --cflags)
      echo -I@includedir@/c_urg
      ;;
    --libs)
      echo @C_INSTALL_LIBS@
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done
